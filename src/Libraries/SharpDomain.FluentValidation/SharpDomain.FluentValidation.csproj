<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>9.0</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>
	
    <PropertyGroup>
        <PackageId>SharpDomain.FluentValidation</PackageId>
        <Title>SharpDomain.FluentValidation</Title>
        <Version>0.2.0</Version>
        <Authors>maszrum</Authors>
        <Company>SharpDomain</Company>
        <Product>SharpDomain</Product>
        <Description>Adds FluentValidation support to SharpDomain based application</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/maszrum/SharpDomain</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>ddd, cqrs, fluent, validation</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Autofac" Version="6.1.0" />
        <PackageReference Include="FluentValidation" Version="9.3.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\SharpDomain.Application\SharpDomain.Application.csproj" />
      <ProjectReference Include="..\SharpDomain.Errors\SharpDomain.Errors.csproj" />
    </ItemGroup>

</Project>
